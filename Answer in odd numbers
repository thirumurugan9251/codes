import java.util.Scanner;
class sample{
public static void main(String [] args){
    Scanner scan=new Scanner(System.in);
    System.out.println("enter the number");
    int n=scan.nextInt();
    int i=0;
    while(i<=0)
    {
        if(i%2==n)
        {
        System.out.println("answer is even");
    
        }
        else
        {
            System.out.println("answer is odd");
        }
        i++;
    
    }
}}
