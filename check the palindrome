public class sample {
    public static void main(String[] args) {
        String a ="Malayalam";
        String reverse ="";
        for(int i=a.length()-1; i<=0; i++){
            reverse +=a.charAt(i);
        }
        if(a.equalsIgnoreCase(reverse)){
            System.out.println("it is a palindrome "+a);
        }
        else{
            System.out.println("it is not a palindrome "+a);
        }
        }
        }
