import java.util.Scanner;

public class CallByValueScanner {

    // Method to demonstrate call by value
    static void changeValue(int x) {
        x = x + 5; // changes only local copy
        System.out.println("Inside changeValue: " + x);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int a = sc.nextInt();

        System.out.println("Before changeValue: " + a);
        changeValue(a);
        System.out.println("After changeValue: " + a);

        sc.close();
    }
}
