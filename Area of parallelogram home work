
import java.util.Scanner;

public class ParallelogramArea {


    public static int calculateArea(int base, int height) {
        return base * height;
    }

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);


        System.out.print("Enter the base of the parallelogram: ");
        int base = scan.nextInt();

        System.out.print("Enter the vertical height of the parallelogram: ");
        int height = scan.nextInt();

        
        int area = calculateArea(base, height);

    
        System.out.println("Area of the parallelogram = " + area);

        scan.close();
    }
}
